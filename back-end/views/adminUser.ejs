<%- include("cabeceras/cabecera.listarUsuario.ejs") %>

  <body>
    <%- include("cabeceras/cabecera.header.ejs") %>
    <h1 class="p-3 text-center">Listado de Usuarios</h1>

    <div class="container">
      <!-- referencia a ruta create-->
      <div class="p-2">
        <a href="/admin" class="btn btn-outline-primary">Regresar</a>
      </div>
      <!-- referencia a ruta create-->
      <div class="d-flex flex-row-reverse">
        <a href="/registro" class="btn btn-outline-primary mt-4"><i class='bx bxs-plus-circle bx-md'></i></a>
      </div>
      <table class="table table-dark table-striped text-center mt-4">
        <thead>
          <tr class="bg-primary text-white">
            <th scope="col">ID</th>
            <th scope="col">NOMBRES</th>
            <th scope="col">APELLIDOS</th>
            <th scope="col">CORREO</th>
            <th scope="col">ROL</th>
            <th scope="col">ACCIONES</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach((user)=>{ %>
            <tr>
              <td>
                <%= user.id %>
              </td>
              <td>
                <%= user.nombre %>
              </td>
              <td>
                <%= user.apellidos %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <% if(user.bandera_admin==1){ %>
                  Cliente/Administrador
                  <% } else{ %>
                    Cliente
                    <% } %>
              </td>
              <td>
                <a href="/modificar/<%= user.id%>" class="btn btn-outline-info"><i class='bx bxs-edit'></i></a>
                <a onclick="eliminar('<%= user.id %>')" class="btn btn-outline-danger"><i
                    class='bx bxs-trash-alt'></i></a>
              </td>
            </tr>
            <% }) %>

        </tbody>
      </table>
    </div>

    <%- include("cabeceras/cabecera.footer.ejs") %>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="js/eliminarUsu.js"></script>
  </body>

  </html>